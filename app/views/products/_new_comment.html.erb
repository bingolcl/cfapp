<div class="row">

<div class="col-sm-6">
<% if signed_in? %>

  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>

    <p>
      <%= f.label :body, "Comment" %><br>
      <%= f.text_area :body, class: "form-control" %>
    </p>
    
  <p>
    <div class="rating"></div>
  </p>

    <p>
      <%= f.submit "Submit", class: "btn btn-default navbar-btn" %>
    </p>
  <% end %>

<% else %>

<p> Add a review? Pleae  <%= link_to('Login', new_user_session_path)  %>  </p>

<% end %>


</div>
</div>