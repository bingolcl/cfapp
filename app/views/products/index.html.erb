

<div class="container">
  <h1>Listing products</h1>
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-2 col-md-3">
      <h1><%= product.name %></h1>
      <p><%= image_tag(product.image_url, class: "img-list") %><p>
      <p><%= product.description %></p>      
      <p>$<%= product.price %><p>
    </div><!-- /col -->
    <% end %>
  </div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td ><a href="<%= product.image_url %>"> <%= product.image_url %> </a></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Product', new_product_path, class: "btn btn-default navbar-btn" %> &raquo;<p>

</div>



